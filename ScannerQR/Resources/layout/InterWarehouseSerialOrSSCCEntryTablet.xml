<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:textStyle="bold"
        android:textSize="16px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listData"
        android:listSelector="@android:color/holo_blue_light"
        android:choiceMode="singleChoice" 
        />
   
    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
      
       
        android:weightSum="3"
        android:id="@+id/text"
        android:paddingTop="5px">

        <TextView
            android:textSize="16px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent"
            android:text="Ident" />

        <TextView
            android:text="Količina" 
            android:textSize="16px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:text="Lokacija"            
            android:textSize="16px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
       


     

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

            <TextView
                android:textStyle="bold"
                android:textSize="16px"
                android:layout_width="142.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingTop="5px"
                android:text="Ident"
                android:layout_marginRight="0.0dp" />

        <EditText
            android:textStyle="bold"
            android:textSize="16px"
            android:singleLine="true"
            android:layout_width="253.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0.0dp"
            android:paddingTop="5px"
            android:id="@+id/tbIdent"
            android:layout_marginRight="1.0dp" />


        <EditText
            android:textStyle="bold"
            android:textSize="16px"
            android:singleLine="true"
            android:layout_width="253.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0.0dp"
            android:paddingTop="5px"
            android:id="@+id/lbIdentName"
            android:layout_marginRight="1.0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

            <TextView
                android:textStyle="bold"
                android:textSize="16px"
                android:layout_width="99.0dp"
                android:layout_height="wrap_content"
                android:text="SSCC koda"
                android:paddingTop="5px"
                android:paddingLeft="10px"
                android:id="@+id/textView1"
                android:layout_marginRight="42.5dp" />

            <EditText
                android:textStyle="bold"
                android:textSize="16px"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0.0dp"
                android:layout_weight="0.50"
                android:paddingTop="5px"
                android:id="@+id/tbSSCC" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

            <TextView
                android:textStyle="bold"
                android:textSize="16px"
                android:layout_width="99.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingTop="5px"
                android:text="Serijska št."
                android:layout_marginRight="41.5dp" />

            <EditText
                android:textStyle="bold"
                android:textSize="16px"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="0.0dp"
                android:paddingTop="5px"
                android:id="@+id/tbSerialNum" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

            <TextView
                android:textStyle="bold"
                android:textSize="16px"
                android:layout_width="101.0dp"
                android:layout_height="wrap_content"
                android:text="Izd. lokacija"
                android:paddingTop="5px"
                android:paddingLeft="10px"
                android:layout_marginRight="0.0dp" />

        <EditText
            android:textStyle="bold"
            android:textSize="16px"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbIssueLocation" />
               <Spinner
                android:layout_width="71.0dp"
                android:layout_height="match_parent"
                android:id="@+id/spIssue" />
            
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:textStyle="bold"
            android:textSize="16px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Prej. lokacija"
            android:layout_marginRight="29.0dp" />

        <EditText
             android:textStyle="bold"
            android:textSize="16px"    
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbLocation" />
               <Spinner
                android:layout_width="71.0dp"
                android:layout_height="match_parent"
                android:id="@+id/spReceive" />
            

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

            <TextView
                android:textStyle="bold"
                android:textSize="16px"
                android:layout_width="83.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingTop="5px"
                android:text="Količina"
                android:layout_marginRight="52.5dp"
                android:id="@+id/lbQty" />

        <EditText
            android:textStyle="bold"
            android:textSize="16px"    
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbPacking" />

        <Button
            android:text="-(F1)"
            android:layout_width="74.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

            <TextView
                android:textStyle="bold"
                android:textSize="16px"
                android:layout_width="135.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingTop="5px"
                android:text="Št. enot"
                android:id="@+id/lbUnits" />

        <EditText
            android:textStyle="bold"
            android:textSize="16px"   
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbUnits" />


    </LinearLayout>




    <TextView
        android:layout_width="111.0dp"
        android:layout_height="4.5dp"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:id="@+id/lbUnits123" />





  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5px">

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Dodaj ser. št."
                android:layout_width="match_parent"
                android:layout_height="55.0dp"
                android:textSize="16px"
                android:paddingLeft="10px"
                android:drawableLeft="@drawable/newitem"
                android:id="@+id/btSaveOrUpdate"
                android:layout_marginBottom="0.0dp" />

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Nova pozicija "
                android:layout_width="match_parent"
                android:layout_height="55.0dp"
                android:drawableLeft="@drawable/newitem"
                android:textSize="16px"
                android:paddingLeft="10px"
                android:id="@+id/button3"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>


 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5px">

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Zaključi"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="55.0dp"
                android:textSize="16px"
                android:paddingLeft="10px"
                android:drawableLeft="@drawable/shipped"
                android:id="@+id/button5" />

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Pregled pozicij"
                android:layout_width="match_parent"
                android:layout_height="55.0dp"
                android:textSize="16px"
                android:drawableLeft="@drawable/focus"
                android:paddingLeft="10px"
                android:id="@+id/button4"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>
        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Izhod "
            android:layout_width="match_parent"
            android:layout_height="55.0dp"
            android:textSize="16px"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10px"
            android:id="@+id/button6"
            android:layout_marginTop="0.0dp" />

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="match_parent"
            android:layout_height="225.0dp"
            android:id="@+id/imagePNG" />


    </LinearLayout>









</android.support.percent.PercentRelativeLayout>