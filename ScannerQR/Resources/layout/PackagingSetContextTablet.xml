<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />


    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
      
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
      
        android:weightSum="5"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
           android:textSize="18dp" 
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naziv"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
         android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naročeno"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
        <TextView
           android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Prejeto"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/position" />


        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Odprto"
            android:layout_marginRight="28.0dp"
            android:id="@+id/serial" />



     

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

        <TextView
       android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="97.5dp"
        android:layout_height="40.5dp"
        android:text="Pakiranje"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:id="@+id/textView1"
        android:layout_marginRight="6.0dp"
        android:layout_marginLeft="0.0dp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
        android:textSize="18dp"
            android:textStyle="bold"    
            android:layout_width="114.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Skladišče:"
            android:layout_marginRight="83.0dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="43.5dp"
            android:id="@+id/cbWarehouse"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="0.0dp" 
            android:spinnerMode="dialog"  />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
           android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="97.5dp"
            android:layout_height="wrap_content"
            android:text="Prej. lokacija:"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/view"
            android:layout_marginRight="82.0dp" />

        <EditText
          android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0.0dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbLocation" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"    
            android:layout_width="148.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="SSCC koda:"
            android:layout_marginRight="32.5dp" />

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0.0dp"
            android:paddingTop="5dp"
            android:id="@+id/tbSSCC" />


    </LinearLayout>



    <LinearLayout
            
        android:layout_width="fill_parent"
        android:layout_height="6.5dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_marginBottom="222.5dp"
        android:id="@+id/linearLayout1" >

    </LinearLayout>
    <TextView
        android:layout_width="114.5dp"
        android:layout_height="44.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginRight="83.0dp" />

 <LinearLayout
        android:weightSum="2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

            <Button
                android:layout_weight="1"
                android:textSize="18dp"
                android:background="@drawable/nicelookingbutton"
                android:text="Potrdi"
                android:drawableLeft="@drawable/confirmation"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:id="@+id/btConfirm" />

            <Button
                android:textSize="18dp"
                android:background="@drawable/nicelookingbutton"
                android:text="Izhod"
                android:drawableLeft="@drawable/logout"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:id="@+id/btExit" />


    </LinearLayout>


    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>