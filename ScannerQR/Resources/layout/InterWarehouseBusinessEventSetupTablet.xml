<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />


    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
      
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        
        />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
      
        android:weightSum="6"
        android:id="@+id/text"
        android:paddingTop="5px">

       

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

    <TextView
        android:textStyle="bold"
        android:textSize="18px"
        android:text="Posl dog"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label1"
        android:gravity="center" />

      <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="41.0dp"
        android:id="@+id/cbDocType"
        android:gravity="center"
        android:spinnerMode="dialog"
       />
    <TextView
        android:textStyle="bold"
        android:textSize="18px"
        android:text="Izdajno skladišće"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="39.0dp"
        android:id="@+id/label2"
        android:gravity="center" />
<com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="41.0dp"
        android:id="@+id/cbIssueWH"
        android:gravity="center"
        android:spinnerMode="dialog"
       />
    <TextView
        android:textStyle="bold"
        android:textSize="18px"    
        android:text="Prejemno skladišće"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="46.5dp"
        android:id="@+id/label3"
        android:gravity="center" />
<com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:id="@+id/cbRecceiveWH"
        android:layout_marginBottom="14.5dp"
        android:gravity="center"
        android:spinnerMode="dialog"
         />
    <TextView
        android:textStyle="bold"
        android:textSize="18px"
        android:layout_width="91.0dp"
        android:layout_height="182.5dp"
        android:paddingLeft="10px"
        android:paddingTop="5px"/>


  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5px">

            <Button
                android:layout_weight="1"
                android:textSize="18px"
                android:background="@drawable/nicelookingbutton"
                android:text="Potrdi"
                android:drawableLeft="@drawable/next"
                android:paddingLeft="10px"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:id="@+id/btnConfirm" />

            <Button
                android:textSize="18px"
                android:background="@drawable/nicelookingbutton"
                android:text="Izhod"
                android:drawableLeft="@drawable/logout"
                android:paddingLeft="10px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:id="@+id/logout" />


    </LinearLayout>







    </LinearLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>