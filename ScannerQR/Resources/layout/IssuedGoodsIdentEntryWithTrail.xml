<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="378.5dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:text="Izberite eno pozicijo!"
        android:layout_marginRight="28.0dp"
        android:layout_marginLeft="130.0dp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="78.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Naročilo"
            android:layout_marginRight="28.0dp" />

        <EditText
               android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbOrder" />


    </LinearLayout>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="80.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Naročnik"
            android:layout_marginRight="25.5dp" />

        <EditText
                android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbReceiver" />


    </LinearLayout>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="57.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Ident"
            android:layout_marginRight="47.5dp" />

        <EditText
            
                android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbIdentFilter" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Lokacija"
            android:layout_marginRight="47.5dp" />

        <EditText
                android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbLocationFilter" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_weight="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Ident"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Ident" />

        <TextView
            android:layout_weight="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Lokacija"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Location" />

        <TextView
            android:layout_weight="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Količina"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Qty" />


        <TextView
            android:layout_weight="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Naziv"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Name" />




    </LinearLayout>
     <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:background="?android:attr/activatedBackgroundIndicator"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="155.0dp"
            android:id="@+id/ivTrail"
            android:choiceMode="singleChoice"
            android:isScrollContainer="true"
            android:scrollbarSize="100px"
            android:drawSelectorOnTop="true"
            android:divider="@android:color/black"
            android:dividerHeight="1px"
            android:defaultFocusHighlightEnabled="true"
            android:scrollbars="horizontal|vertical"
            android:layout_marginRight="0.0dp"
            android:listSelector="@android:color/holo_blue_bright" 
        />
</HorizontalScrollView>

    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Potrdi - F3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btConfirm" />
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Pregled unesenih pozicij - F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btDisplayPositions" />
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Izhod - F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btLogout" />
    
</LinearLayout>
