<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:text="Posl. dog."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="33.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
<com.toptoche.searchablespinnerlibrary.SearchableSpinner
  	    android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:id="@+id/cbDocType" />
    <TextView
        
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="38.0dp"
        android:id="@+id/textView2"
        android:text="Skladišče" />
   <com.toptoche.searchablespinnerlibrary.SearchableSpinner
             android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="53.0dp"
        android:id="@+id/cbWarehouse" />
    <TextView
        android:text="...."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbExtra" />
   <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
     
       
        android:layout_height="69.5dp"
        android:id="@+id/cbExtra" />
    <TextView
    
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="122.5dp"
        android:id="@+id/textView4"
        android:layout_marginBottom="0.0dp" />
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5px">

        <Button
            android:textSize="16px"
            android:background="@drawable/nicelookingbutton"
            android:text="Potrdi-f3"
            android:drawableLeft="@drawable/confirmation"
            android:paddingLeft="10px"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:layout_weight="1"
            android:id="@+id/btnOrder" />

        <Button
            android:textSize="16px"
            android:background="@drawable/nicelookingbutton"
            android:text="Brez naročila-f3"
            android:drawableLeft="@drawable/order"
            android:paddingLeft="10px"
            android:layout_weight="1"
            android:layout_width="match_parent"
           android:layout_height="70.0dp"
            android:id="@+id/btnOrderMode" />


    </LinearLayout>
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Izhod - F8"
        android:layout_width="match_parent"
        android:layout_height="70.0dp"
        android:textSize="16px"
        android:drawableLeft="@drawable/logout"
        android:paddingLeft="10px"
        android:id="@+id/btnLogout"
        android:layout_marginTop="0.0dp" />
    
</LinearLayout>
