<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="                                  Skladišče"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="37.0dp"
        android:minWidth="25dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:minHeight="25dp"
        android:id="@+id/textView1" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="42.0dp"
        android:id="@+id/cbWarehouse" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="138.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Datum inventure." />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/dtDate"/>

        <Button
            android:text="Izberi"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/select" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="317.0dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="302.0dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"/>


    </LinearLayout>
   
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

        <Button
            android:textSize="20dp"
            android:background="@drawable/nicelookingbutton"
            android:text="Potrdi - f3"
            android:drawableLeft="@drawable/confirmation"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="70.0dp"
            android:id="@+id/confirm" />

        <Button
           android:textSize="20dp"
            android:background="@drawable/nicelookingbutton"
            android:text="Izhod - f8"
            android:layout_weight="1"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:id="@+id/logout" />


    </LinearLayout>

</LinearLayout>
