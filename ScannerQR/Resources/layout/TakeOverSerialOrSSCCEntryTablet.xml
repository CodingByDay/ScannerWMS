<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listData"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/holo_blue_light" 
        />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
      
        android:weightSum="3"
        android:id="@+id/text"
        android:paddingTop="5px">

        <TextView
            android:textSize="18px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent"
            android:text="Ident" />

        <TextView
            android:text="Količina" 
            android:textSize="18px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:text="Lokacija"            
            android:textSize="18px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
       



     

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

      <TextView
        android:textSize="18px"
        android:textStyle="bold"    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:text="Prevzem od dobavitelja" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:textSize="18px"
            android:textStyle="bold"
              
            android:layout_width="80.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Ident" />

        <EditText
            android:textSize="18px"
            android:textStyle="bold"    
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbIdent"
            android:layout_marginRight="0.0dp" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:textSize="18px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSCC koda"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView1"
            android:layout_marginRight="6.0dp" />

        <EditText
            android:textSize="18px"
            android:textStyle="bold"    
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbSSCC" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:textSize="18px"
            android:textStyle="bold"    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Serijska št."
            android:layout_marginRight="6.5dp" />

        <EditText
            android:textSize="18px"
            android:textStyle="bold"    
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbSerialNum" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:textSize="18px"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokacija"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:layout_marginRight="23.0dp" />

            <EditText
                android:textSize="18px"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="184.0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40px"
                android:layout_weight="0.50"
                android:paddingTop="5px"
                android:id="@+id/tbLocation" />

            <Spinner
                android:layout_width="71.0dp"
                android:layout_height="match_parent"
                android:id="@+id/spLocation" />
            
  
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:textSize="18px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Količina"
            android:layout_marginRight="27.0dp"
            android:id="@+id/lbQty" />

        <EditText
            android:textSize="18px"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbPacking" />

        <Button
            android:text="-(F1)"
            android:layout_width="74.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
                     
            android:textSize="18px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Št. enot"
            android:layout_marginRight="24.5dp"
            android:id="@+id/lbUnits" />

        <EditText
            android:textSize="18px"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbUnits" />


    </LinearLayout>


        <TextView
            android:textSize="18px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_marginRight="24.5dp"
            android:id="@+id/lbUnitss" />

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5px">

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Dodaj ser."
                android:layout_width="match_parent"
                android:layout_height="55.0dp"
                android:textSize="18px"
                android:paddingLeft="10px"
                android:drawableLeft="@drawable/newitem"
                android:id="@+id/btSaveOrUpdate"
                android:layout_marginBottom="0.0dp" />

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Nova poz."
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="55.0dp"
                android:drawableLeft="@drawable/newitem"
                android:textSize="18px"
                android:paddingLeft="10px"
                android:id="@+id/button4"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>


 <LinearLayout
        android:weightSum="2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">
             
            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Zaključi"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="55.0dp"
                android:textSize="18px"
                android:paddingLeft="10px"
                android:drawableLeft="@drawable/shipped"
                android:id="@+id/button6" />

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Pregled poz."
                android:layout_width="match_parent"
                android:layout_height="55.0dp"
                android:textSize="18px"
                android:drawableLeft="@drawable/focus"
                android:paddingLeft="10px"
                android:id="@+id/button5"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>
    
        
        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Izhod"
            android:layout_width="match_parent"
            android:layout_height="55.0dp"
            android:textSize="18px"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10px"
            android:id="@+id/button7"
            android:layout_marginTop="0.0dp" />

        <com.jsibbold.zoomage.ZoomageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/warehousePNG" />

    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>