<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Prevzem od dobavitelja" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="80.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident" />

        <EditText
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbIdent"
            android:layout_marginRight="0.0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSCC koda"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView1"
            android:layout_marginRight="6.0dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbSSCC" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Serijska št."
            android:layout_marginRight="6.5dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbSerialNum" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokacija"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="23.0dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbLocation" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Količina"
            android:layout_marginRight="27.0dp"
            android:id="@+id/lbQty" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbPacking" />

        <Button
            android:text="-(F1)"
            android:layout_width="74.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Št. enot"
            android:layout_marginRight="24.5dp"
            android:id="@+id/lbUnits" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbUnits" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

        <Button
            android:layout_weight="1"
            android:background="@drawable/nicelookingbutton"
            android:text="serijska - f2"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/newitem"
            android:id="@+id/btSaveOrUpdate"
            android:layout_marginBottom="0.0dp" />

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Kreiraj - f3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:drawableLeft="@drawable/newitem"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/button4"
            android:layout_marginBottom="0.0dp" />


    </LinearLayout>


    <LinearLayout
        android:weightSum="2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Zaključi - f4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="70.0dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/shipped"
            android:id="@+id/button6" />

        <Button
            android:layout_weight="1"
            android:background="@drawable/nicelookingbutton"
            android:text="Pregled - f5"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/focus"
            android:paddingLeft="10dp"
            android:id="@+id/button5"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="0.0dp" />


    </LinearLayout>
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Izhod - F9"
        android:layout_width="match_parent"
        android:layout_height="70.0dp"
        android:textSize="20dp"
        android:drawableLeft="@drawable/logout"
        android:paddingLeft="10dp"
        android:id="@+id/button7"
        android:layout_marginTop="0.0dp" />

</LinearLayout>