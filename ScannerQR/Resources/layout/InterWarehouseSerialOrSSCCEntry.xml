<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="134.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Ident"
            android:layout_marginRight="0.0dp" />

        <EditText
            android:singleLine="true"
            android:layout_width="253.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0.0dp"
            android:paddingTop="5px"
            android:id="@+id/tbIdent"
            android:layout_marginRight="1.0dp" />


        <EditText
            android:singleLine="true"
            android:layout_width="253.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0.0dp"
            android:paddingTop="5px"
            android:id="@+id/lbIdentName"
            android:layout_marginRight="1.0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSCC koda"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView1"
            android:layout_marginRight="41.5dp" />

        <EditText
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbSSCC" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Serijska št."
            android:layout_marginRight="41.5dp" />

        <EditText
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbSerialNum" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Izd. lokacija"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:layout_marginRight="35.0dp" />

        <EditText
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbIssueLocation" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Prej. lokacija"
            android:layout_marginRight="29.0dp" />

        <EditText
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbLocation" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="59.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Količina"
            android:layout_marginRight="52.5dp"
            android:id="@+id/lbQty" />

        <EditText
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbPacking" />

        <Button
            android:text="-(F1)"
            android:layout_width="74.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="111.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Št. enot"
            android:id="@+id/lbUnits" />

        <EditText
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbUnits" />


    </LinearLayout>
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Dodaj novo serijsko št. - F2"
        android:layout_width="match_parent"
        android:layout_height="46.0dp"
        android:id="@+id/btSaveOrUpdate" />
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Nova pozicija - F3"
        android:layout_width="match_parent"
        android:layout_height="43.5dp"
        android:id="@+id/button3" />
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Zaključi medskladiščnico - F4"
        android:layout_width="match_parent"
        android:layout_height="41.5dp"
        android:id="@+id/button5" />
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Pregled vnešenih pozicij - F5"
        android:layout_width="match_parent"
        android:layout_height="44.0dp"
        android:id="@+id/button4" />
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Izhod - F8"
        android:layout_width="match_parent"
        android:layout_height="44.5dp"
        android:id="@+id/button6" />



</LinearLayout>