<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Inventura - izvedba inventure"
        android:id="@+id/textView4" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Skladišče"
            android:layout_marginRight="48.5dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40.5dp"
            android:id="@+id/cbWarehouse" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokacija"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView1"
            android:layout_marginRight="55.0dp" />

        <EditText
            android:textStyle="bold"
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbLocation" />
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLocation"
            android:spinnerMode="dialog" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident"
            android:layout_marginRight="73.5dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="37.5dp"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbIdent" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerIdent"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:id="@+id/linearLayout1"
                                     >

        <TextView
           
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naziv"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="69.5dp"
            android:id="@+id/textView2" />

        <EditText 
            android:textStyle="bold"
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbTitle" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="107.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="SSCC koda" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="38.0dp"
            android:layout_weight="0.50"
            android:layout_marginLeft="46.5dp"
            android:paddingTop="5dp"
            android:id="@+id/tbSSCC" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Serijska št."
            android:layout_marginRight="35.0dp"
            android:id="@+id/textView3" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="37.0dp"
            android:paddingTop="5dp"
            android:id="@+id/tbSerialNum" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Količina"
            android:layout_marginRight="54.0dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="36.0dp"
            android:layout_weight="0.50"
            android:layout_marginLeft="36.5dp"
            android:paddingTop="5dp"
            android:id="@+id/tbPacking" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Št. enot"
            android:layout_marginRight="55.5dp"
            android:id="@+id/lbUnits" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="35.5dp"
            android:layout_weight="0.50"
            android:layout_marginLeft="36.0dp"
            android:paddingTop="5dp"
            android:id="@+id/tbUnits" />

    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="14.0dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginRight="55.5dp"
        android:id="@+id/space" />
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

        <Button
            android:layout_weight="1"
            android:background="@drawable/nicelookingbutton"
            android:text="Tiskaj - f2"
            android:layout_width="match_parent"
           android:layout_height="70.0dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/printer"
            android:id="@+id/btPrint" />

        <Button
            android:layout_weight="1"
            android:background="@drawable/nicelookingbutton"
            android:text="Potrdi - f3"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/confirmation"
            android:paddingLeft="10dp"
            android:id="@+id/button1"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="0.0dp" />


    </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Briši - F4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="62.0dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/delete"
            android:id="@+id/btDelete" />

        <Button
            android:layout_weight="1"
            android:background="@drawable/nicelookingbutton"
            android:text="izhod - f8"
            android:layout_width="match_parent"
            android:layout_height="63.0dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10dp"
            android:id="@+id/button2"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="0.0dp" />


    </LinearLayout>


</LinearLayout>