<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="65.0dp"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:text="Meni inventure"
        android:layout_marginTop="0.0dp"
        android:textStyle="bold|italic"
        android:textSize="18px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="74.0dp"
            android:background="@android:color/holo_blue_bright"
            android:paddingBottom="5dp"
             android:textSize="16px"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/open"
            android:text="Odpri dokument-F2"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:id="@+id/button1" />

        <Button
            android:layout_weight="1"
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="72.0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_green_dark"
            android:drawableLeft="@drawable/inventory"
            android:paddingBottom="5dp"
             android:textSize="16px"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Izvedba inventure-f3"
            android:textColor="#000000"
            android:id="@+id/button2" />




    </LinearLayout>


       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="69.0dp"
            android:background="@android:color/holo_orange_light"
            android:drawableLeft="@drawable/confirmation"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
             android:textSize="16px"
            android:paddingTop="8dp"
            android:text="Potrdi inventuro-f4"
            android:layout_marginBottom="0.0dp"
            android:textColor="#000000"
            android:id="@+id/button3"
            android:layout_marginTop="0.0dp" />

        <Button
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="72.0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
             android:textSize="16px"
            android:layout_marginBottom="5dp"
            android:background="#ff969eac"
            android:drawableLeft="@drawable/shipped"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Odpri inventuro-f5"
            android:textColor="#000000"
            android:id="@+id/button4" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
       
        android:orientation="horizontal">

        <Button
            android:bottomLeftRadius="7dp"
            android:bottomRightRadius="7dp"
            android:topLeftRadius="7dp"
            android:topRightRadius="7dp"
            android:layout_width="match_parent"
         
            android:layout_height="71.5dp"
             android:textSize="16px"
            android:background="@android:color/holo_red_light"
            android:drawableLeft="@drawable/printer"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Tiskaj inventuro-f6"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:id="@+id/button7" />




    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="115.0dp"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:layout_marginTop="0.0dp"
        android:textStyle="bold|italic"
        android:textSize="18px" />
  
    <Button
        android:bottomLeftRadius="7dp"
        android:bottomRightRadius="7dp"
        android:topLeftRadius="7dp"
        android:topRightRadius="7dp"
        android:text="Odjava "
        android:layout_width="match_parent"
        android:layout_height="67.0dp"
         android:textSize="16px"
        android:id="@+id/logout"
        android:layout_marginLeft="4.0dp"
        android:drawableLeft="@drawable/logout"
        android:paddingLeft="10px"
        android:layout_marginRight="0.0dp"
        android:background="#ff006064" />

</LinearLayout>