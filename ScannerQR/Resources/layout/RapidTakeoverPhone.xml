<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
      
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />
        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/location"
            android:layout_width="match_parent" />
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Količina"
            android:layout_width="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        android:foregroundGravity="center">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
              
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="97.5dp"
                android:layout_height="wrap_content"
                android:text="SCCC"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView1" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:id="@+id/tbSSCC" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="97.5dp"
                android:layout_height="wrap_content"
                android:text="Ident"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/Idents" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:id="@+id/tbIdent" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="97.5dp"
                android:layout_height="wrap_content"
                android:text="Lokacija"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/receiveLocation" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:id="@+id/tbReceiveLocation" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
                                     >

            <TextView
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="97.5dp"
                android:layout_height="wrap_content"
                android:text="Zaloga"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/tbStock" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:id="@+id/tbRealStock" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="91.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Skladišče"
                android:layout_marginRight="27.0dp" />
            <Spinner
                android:spinnerMode="dialog"
                android:layout_width="match_parent"
                android:layout_height="41.0dp"
                android:id="@+id/cbWarehouses"
                android:gravity="center"
                android:layout_marginLeft="22.5dp"
                android:layout_marginRight="27.0dp"
           />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:textStyle="bold"
                android:layout_width="129.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Prej. Lokacija" />

            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="40dp"
                android:paddingTop="5dp"
                android:id="@+id/tbLocation" />


        </LinearLayout>
        <TextView
            android:layout_width="95.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="296.0dp"
            android:layout_height="99.0dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:id="@+id/lbStock"
            android:foregroundGravity="center"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">

            <Button
                android:textSize="20dp"
                android:background="@drawable/nicelookingbutton"
                android:text="Potrdi - F2"
                android:layout_weight="1"
                android:drawableLeft="@drawable/confirmation"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:id="@+id/btConfirm" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/nicelookingbutton"
                android:text="Izhod - f8"
                android:layout_weight="1"
                android:drawableLeft="@drawable/logout"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:id="@+id/btLogout" />


        </LinearLayout>



    </LinearLayout>
</LinearLayout>
