<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
   
            android:textStyle="bold"
            android:layout_width="89.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="DN"
            android:layout_marginRight="14.0dp" />

        <EditText
     
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbWorkOrder" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
   
            android:textStyle="bold"
            android:layout_width="102.0dp"
            android:layout_height="wrap_content"
            android:text="Ident"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView1" />

        <EditText

            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbIdent" />

    </LinearLayout>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="56.0dp"
        android:id="@+id/textView2" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView

            android:textStyle="bold"
            android:layout_width="98.0dp"
            android:layout_height="wrap_content"
            android:text="Št. kartona"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView11" />

        <EditText
       
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbCardNum" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
                        android:textStyle="bold"

            android:layout_width="97.0dp"
            android:layout_height="wrap_content"
            android:text="Serijska št."
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView131" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbSerialNum" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
    
            android:textStyle="bold"
            android:layout_width="94.5dp"
            android:layout_height="wrap_content"
            android:text="Količina"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/tex1tView1" />

        <EditText
    
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbQty" />

    </LinearLayout>
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="183.0dp"
        android:id="@+id/textView3" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5px">

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="potrdi paleto-f4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="70.0dp"
            android:textSize="16px"
            android:paddingLeft="10px"
            android:drawableLeft="@drawable/confirmation"
            android:id="@+id/btConfirm" />

        <Button
            android:layout_weight="1"
            android:background="@drawable/nicelookingbutton"
            android:text="izhod-f8"
            android:layout_width="match_parent"
           android:layout_height="70.0dp"
            android:textSize="16px"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10px"
            android:id="@+id/btExit"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="0.0dp" />


    </LinearLayout>

</LinearLayout>