<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="38.0dp"
        android:id="@+id/bin"
        android:src="@drawable/settings"
        android:contentDescription=""
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="22.0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40.5dp"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:layout_marginTop="0.0dp"
        android:textStyle="bold|italic" />
    <TextView
        android:layout_width="121.5dp"
        android:layout_height="76.0dp"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:text="Namestite spodaj."
        android:layout_marginTop="0.0dp"
        android:textStyle="bold|italic"
        android:textSize="20px" />
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:singleLine="true"
            android:layout_width="77.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Web App"
            android:layout_marginRight="39.5dp" />

        <EditText
            android:singleLine="true"
            android:layout_width="633.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/rootURL" />


    </LinearLayout>
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:singleLine="true"
            android:layout_width="77.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="ID"
            android:layout_marginRight="39.5dp" />

        <EditText
            android:singleLine="true"
            android:layout_width="638.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/IDdevice" />


    </LinearLayout>
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
          android:singleLine="true"
          android:layout_width="77.0dp"
          android:layout_height="wrap_content"
          android:paddingLeft="10px"
          android:paddingTop="5px"
          android:text="Tip"
          android:layout_marginRight="39.5dp" />

         <Spinner
          android:layout_width="match_parent"
          android:layout_height="42.5dp"
          android:id="@+id/cbDevice"
          android:gravity="center" 
          android:spinnerMode="dialog"  />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Ok."
            android:layout_width="match_parent"
            android:layout_height="67.0dp"
            android:id="@+id/ok" />

       


    </LinearLayout>

</LinearLayout>
