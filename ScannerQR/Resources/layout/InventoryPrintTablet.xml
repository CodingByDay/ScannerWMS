<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        android:text="                               *Pritiskom na gumb se bo odprlo okno na katerem lahko vidite podrobnejše informacije."
        />


    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
      
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
      
        android:weightSum="5"
        android:id="@+id/text"
        android:paddingTop="5px">

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/position" />


        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:layout_marginRight="28.0dp"
            android:id="@+id/serial" />



     

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">
         <TextView
        android:text="                          Inventura - Tiskanje"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="37.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1sads"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="0.0dp" />
    <TextView
        android:text="Skladišče"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="37.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="42.0dp"
        android:spinnerMode="dialog"
        android:id="@+id/cbWarehouse" />
    <TextView
        android:text="Lokacija"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="37.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1s" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/linearLayout2" >

        <EditText
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbLocation" />


    </LinearLayout>
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5px">

        <Button
            android:textSize="16px"
            android:background="@drawable/nicelookingbutton"
            android:text="Tiskaj-f2"
            android:drawableLeft="@drawable/printer"
            android:paddingLeft="10px"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="70.0dp"
            android:id="@+id/btPrint" />

        <Button
            android:layout_weight="1"
           android:textSize="16px"
            android:background="@drawable/nicelookingbutton"
            android:text="Izhod-f8"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10px"
            android:layout_width="match_parent"
           android:layout_height="70.0dp"
            android:id="@+id/button2" />


    </LinearLayout>
     
    </LinearLayout>









</android.support.percent.PercentRelativeLayout>