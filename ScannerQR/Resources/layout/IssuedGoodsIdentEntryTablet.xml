<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />


    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
      
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
    
        android:weightSum="5"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView

            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naziv"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

          <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naročeno"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
          <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Odpremljeno"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/position" />


        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Odprto"
            android:layout_marginRight="28.0dp"
            android:id="@+id/serial" />



 

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

     <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Odprema blaga"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="102.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident" />

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbIdent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="99.5dp"
            android:layout_height="wrap_content"
            android:text="Naziv"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView1" />

        <EditText
           android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbNaziv" />
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:text="Naročilo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbOrderInfo"
        android:layout_gravity="center"
        android:foregroundGravity="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="97.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naročilo/poz." />

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"   
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbOrder" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="94.0dp"
            android:layout_height="wrap_content"
            android:text="Naročnik"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbConsignee" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
           android:textSize="18dp"
            android:textStyle="bold"     
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Datum dobave" />

        <EditText
             android:textSize="18dp"
            android:textStyle="bold"
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbDeliveryDeadline" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="92.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Količina" />

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"    
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbQty" />

    </LinearLayout>


    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="102.0dp"
        android:layout_height="77.0dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="nasled."
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/next"
                android:id="@+id/btNext" />
            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="potrdi"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/confirmation"
                android:paddingLeft="10dp"
                android:id="@+id/btConfirm"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />


        </LinearLayout>
     <LinearLayout
        android:weightSum="2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="pregled"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/focus"
                android:id="@+id/button4" />

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="izhod"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/logout"
                android:paddingLeft="10dp"
                android:id="@+id/button5"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>
    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>