<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <TextView
        android:layout_width="97.5dp"
        android:layout_height="40.5dp"
        android:text="Pakiranje"
        android:paddingTop="5px"
        android:paddingLeft="10px"
        android:id="@+id/textView1"
        android:layout_marginRight="6.0dp"
        android:layout_marginLeft="0.0dp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="114.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Skladišče:"
            android:layout_marginRight="83.0dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="43.5dp"
            android:id="@+id/cbWarehouse"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="0.0dp" 
            android:spinnerMode="dialog"  />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:layout_width="97.5dp"
            android:layout_height="wrap_content"
            android:text="Prej. lokacija:"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView1"
            android:layout_marginRight="82.0dp" />

        <EditText
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0.0dp"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbLocation" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="148.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="SSCC koda:"
            android:layout_marginRight="32.5dp" />

        <EditText
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="0.0dp"
            android:paddingTop="5px"
            android:id="@+id/tbSSCC" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6.5dp"
        android:orientation="horizontal"
        android:paddingTop="5px"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="222.5dp"
        android:id="@+id/linearLayout1" >

    </LinearLayout>


    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Potrdi-f2"
        android:layout_width="match_parent"
        android:layout_height="53.5dp"
        android:id="@+id/btConfirm" />
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="izhod-f9"
        android:layout_width="match_parent"
        android:layout_height="58.0dp"
        android:id="@+id/btExit" />



</LinearLayout>