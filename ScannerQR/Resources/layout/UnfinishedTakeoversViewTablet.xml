<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">






    <ListView
        android:layout_width="match_parent"
        android:textSize="16px"
        
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/dataList"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:keyboardNavigationCluster="true"
        android:listSelector="@android:color/holo_blue_light"
        android:clipChildren="false" 
        />
                                               
   


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/app"
         android:textSize="16px"
        android:textStyle="bold"
        android:weightSum="4"
        android:id="@+id/text"
        android:paddingTop="5px">

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Dokument"
              android:textSize="16px"
            android:layout_marginRight="28.0dp"
            android:id="@+id/document"
            android:layout_width="match_parent" />

        <TextView
              android:textSize="16px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Dobavitelj"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/provider" />



        <TextView
            android:textSize="16px"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Datum"
            android:layout_marginRight="28.0dp"
            android:id="@+id/date" />
        
        <TextView
            
            android:textSize="16px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Štev. pozicija"
            android:layout_marginRight="28.0dp"
            android:id="@+id/numberOfPositions" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="33%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

          <TextView
            
          android:textSize="16px"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:text="Trenutno unešene pozicije(0/0)"
        android:id="@+id/lbInfo" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
                
          android:textSize="16px"
        android:textStyle="bold"
            android:layout_width="156.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Posl. dog. prevz." />

        <EditText
                
           android:textSize="16px"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbBusEvent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
                
          android:textSize="16px"
        android:textStyle="bold"
            android:layout_width="155.5dp"
            android:layout_height="wrap_content"
            android:text="Naročilo"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView1" />

        <EditText
                
          android:textSize="16px"
        android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbOrder" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
                
          android:textSize="16px"
        android:textStyle="bold"
            android:layout_width="153.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Dobavitelj" />

        <EditText
                
          android:textSize="16px"
        android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbSupplier" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"                                     >
        <TextView
                
            android:textSize="16px"
            android:textStyle="bold"
            android:layout_width="151.0dp"
            android:layout_height="wrap_content"
            android:text="Št. pozicij"
            android:paddingTop="5px"
            android:paddingLeft="10px"/>

        <EditText
                
            android:textSize="16px"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbItemCount" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
                
            android:textSize="16px"
            android:textStyle="bold"
            android:layout_width="148.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Kreiral" />

        <EditText
                
            android:textSize="16px"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbCreatedBy" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

            <TextView
                android:textSize="16px"
                android:textStyle="bold"
                android:layout_width="148.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingTop="5px"
                android:text="Datum kreiranja"
                android:textStyle="bold" />

        <EditText
            android:textSize="16px"
            android:textStyle="bold"    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbCreatedAt"
            android:inputType="text" />

    </LinearLayout>
    <TextView
            
        android:layout_width="wrap_content"
        android:layout_height="19.5dp"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:id="@+id/tarsget"
        android:layout_marginBottom="6.5dp" />

    <TextView
        android:layout_width="148.5dp"
        android:layout_height="0.0dp"
        android:paddingLeft="10px"
        android:paddingTop="5px"/>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5px">

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Naslednji prev. - F1"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:textSize="16px"
            android:paddingLeft="10px"
            android:layout_weight="1"
            android:drawableLeft="@drawable/next"
            android:id="@+id/btNext"
            android:layout_marginBottom="0.0dp" />

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Zaklj./popravi - F2"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/shipped"
                android:textSize="16px"
                android:paddingLeft="10px"
                android:id="@+id/btFinish"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>


 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Izbriši prevzem - F3"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:textSize="16px"
              android:layout_weight="1"
            android:paddingLeft="10px"
            android:drawableLeft="@drawable/delete"
            android:id="@+id/btDelete" />

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Kreiraj nov-f4"
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:textSize="16px"
              android:layout_weight="1"
            android:drawableLeft="@drawable/newitem"
            android:paddingLeft="10px"
            android:id="@+id/btnew"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="0.0dp" />


    </LinearLayout>
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Izhod - F8"
        android:layout_width="match_parent"
        android:layout_height="70.0dp"
        android:textSize="16px"
        android:drawableLeft="@drawable/logout"
        android:paddingLeft="10px"
        android:id="@+id/logout"
        android:layout_marginTop="0.0dp" />
   




    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        android:text="                               *Pritiskom na gumb se bo otprlo okno na katerem lahko vidite otprte prevzeme."
        />


   
  



</android.support.percent.PercentRelativeLayout>