<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        android:layout_toRightOf="@id/app"
        android:id="@id/list"
        android:layout_below="@id/text"
        />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_widthPercent="100%"
        android:layout_toRightOf="@id/app"
        android:layout_above="@id/list"
        android:weightSum="3"
        android:id="@id/text"
        android:paddingTop="5px">

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Naročilo"
            android:layout_marginRight="28.0dp"
            android:id="@+id/document"
            android:layout_width="match_parent" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Naročnik"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/provider" />




        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Datum"
            android:layout_marginRight="28.0dp"
            android:id="@+id/date" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:text="Odprti prevzemi na čitalcu"
        android:id="@+id/lbInfo" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="115.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="DN" />

        <EditText
              android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbWorkOrder" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:layout_width="113.0dp"
            android:layout_height="wrap_content"
            android:text="Naročnik"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView1" />

        <EditText
              android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbClient" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="112.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Ident" />

        <EditText
              android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbIdent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:layout_width="109.5dp"
            android:layout_height="wrap_content"
            android:text="Št. pozicij"
            android:paddingTop="5px"
            android:paddingLeft="10px"/>

        <EditText
              android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbItemCount" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="110.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Kreiral" />

        <EditText
              android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbCreatedBy" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

            <TextView
                android:layout_width="109.5dp"
                android:layout_height="44.0dp"
                android:paddingLeft="10px"
                android:paddingTop="5px"
                android:text="Datum kreiranja" />

        <EditText
              android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbCreatedAt" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22.5dp"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"/>
    <TextView
        android:layout_width="109.5dp"
        android:layout_height="2.5dp"
        android:paddingLeft="10px"
        android:paddingTop="5px"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Naslednji prevzem - F1"
                android:layout_width="184.5dp"
                android:layout_height="70.0dp"
                android:textSize="16px"
                android:paddingLeft="10px"
                android:drawableLeft="@drawable/next"
                android:id="@+id/btNext"
                android:layout_marginBottom="0.0dp" />

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Zaključi/popravi izb. prevzem - F2"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:drawableLeft="@drawable/shipped"
                android:textSize="16px"
                android:paddingLeft="10px"
                android:id="@+id/btFinish"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>


 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Izbriši prevz. - F3"
                android:layout_width="184.5dp"
                android:layout_height="70.0dp"
                android:textSize="16px"
                android:paddingLeft="10px"
                android:drawableLeft="@drawable/delete"
                android:id="@+id/btDelete" />

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Kreiraj nov-f4"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="16px"
                android:drawableLeft="@drawable/newitem"
                android:paddingLeft="10px"
                android:id="@+id/btNew"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Izhod - F8"
        android:layout_width="match_parent"
        android:layout_height="70.0dp"
        android:textSize="16px"
        android:drawableLeft="@drawable/logout"
        android:paddingLeft="10px"
        android:id="@+id/btLogout"
        android:layout_marginTop="0.0dp" />



    </LinearLayout>










</android.support.percent.PercentRelativeLayout>