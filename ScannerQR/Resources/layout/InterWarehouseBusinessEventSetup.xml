<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:text="Posl dog"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label1"
        android:gravity="center" />
<Spinner
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:id="@+id/cbDocType"
        android:gravity="center"
        android:spinnerMode="dialog"
        />

    <TextView
        android:textStyle="bold"
        android:text="Izdajno skladišće"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="39.0dp"
        android:id="@+id/label2"
        android:gravity="center" />
<com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="41.0dp"
        android:id="@+id/cbIssueWH"
        android:gravity="center"
        android:spinnerMode="dialog"
       />
    <TextView
        android:textStyle="bold"
        android:text="Prejemno skladišće"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="46.5dp"
        android:id="@+id/label3"
        android:gravity="center" />
<com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:id="@+id/cbRecceiveWH"
        android:layout_marginBottom="14.5dp"
        android:gravity="center"
        android:spinnerMode="dialog"
         />
    <TextView
        android:textStyle="bold"
        android:layout_width="91.0dp"
        android:layout_height="193.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"/>


  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

        <Button
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@drawable/nicelookingbutton"
            android:text="Potrdi - f3"
            android:drawableLeft="@drawable/next"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
             android:layout_height="70.0dp"
            android:id="@+id/btnConfirm" />

        <Button
           android:textSize="20dp"
            android:background="@drawable/nicelookingbutton"
            android:text="Izhod - f8"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
             android:layout_height="70.0dp"
            android:id="@+id/logout" />


    </LinearLayout>




</LinearLayout>
