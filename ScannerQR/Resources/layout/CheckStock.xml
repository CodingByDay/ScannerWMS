<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:text="Pregled zaloge na lokaciji" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:singleLine="true"
            android:layout_width="67.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Skladišče"
            android:layout_marginRight="27.0dp" />
        <Spinner
            android:layout_width="251.0dp"
            android:layout_height="41.0dp"
            android:id="@+id/cbWarehouses"
            android:gravity="center"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="27.0dp"
            android:spinnerMode="dialog" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:singleLine="true"
            android:layout_width="97.5dp"
            android:layout_height="wrap_content"
            android:text="Lokacija"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView1" />

        <EditText
              android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbLocation" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10px"
        android:paddingTop="5px"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="95.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Ident" />

        <EditText
               android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbIdent" />


    </LinearLayout>
    <TextView
        android:layout_width="296.0dp"
        android:layout_height="250.5dp"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:id="@+id/lbStock" />

    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Prikaži zalogo - F2"
        android:layout_width="match_parent"
        android:layout_height="54.5dp"
        android:id="@+id/btShowStock" />
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Izhod - F9"
        android:layout_width="match_parent"
        android:layout_height="51.5dp"
        android:id="@+id/button1" />
    


</LinearLayout>