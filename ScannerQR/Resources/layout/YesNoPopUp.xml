<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="167.5dp"
        android:id="@+id/bin"
        android:src="@drawable/bin"
        android:contentDescription=""
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="22.0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40.5dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginTop="0.0dp"
        android:textStyle="bold|italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="65.0dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Ali ste sigurni da Å¾elite zbrisati pozicijo?"
        android:layout_marginTop="0.0dp"
        android:textStyle="bold|italic"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:layout_weight="1"
            android:background="@drawable/nicelookingbutton"
            android:text="Da"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnYes" />

        <Button
            android:layout_weight="1"
            android:background="@drawable/nicelookingbutton"
            android:text="Ne"
            android:layout_width="match_parent"
            android:layout_height="81.5dp"
            android:id="@+id/btnNo" />


    </LinearLayout>

</LinearLayout>
