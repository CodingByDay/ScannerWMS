<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:paddingTop="5px"
        android:text="Odprta pakiranja"
        android:id="@+id/lbInfo" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Št. pakiranja:"
            android:layout_marginRight="51.5dp" />

        <EditText
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbPackNum" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSCC koda:"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:id="@+id/textView1"
            android:layout_marginRight="61.0dp" />

        <EditText
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbSSCC" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
                                     >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Št. pozicij:"
            android:paddingTop="5px"
            android:paddingLeft="10px"
            android:layout_marginRight="67.0dp" />

        <EditText
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="5px"
            android:id="@+id/tbItemCount" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="Kreiral:"
            android:layout_marginRight="86.5dp" />

        <EditText
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="5px"
            android:id="@+id/tbCreatedBy" />



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="145.0dp"
        android:paddingLeft="10px"
        android:paddingTop="5px"/>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Nasled. pakiranje - F1"
            android:layout_width="184.5dp"
            android:layout_height="59.5dp"
            android:textSize="16px"
            android:paddingLeft="10px"
            android:drawableLeft="@drawable/next"
            android:id="@id/btNext"
            android:layout_marginBottom="0.0dp" />

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Popravi pakiranje - F2"
            android:layout_width="match_parent"
            android:layout_height="56.5dp"
            android:drawableLeft="@drawable/fix"
            android:textSize="16px"
            android:paddingLeft="10px"
            android:id="@+id/btUpdate"
            android:layout_marginBottom="0.0dp" />


    </LinearLayout>


 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Novo pakiranje - F3"
            android:layout_width="184.5dp"
            android:layout_height="59.5dp"
            android:textSize="16px"
            android:paddingLeft="10px"
            android:drawableLeft="@drawable/newitem"
            android:id="@+id/btCreate" />

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Izbriši pakiranje - F4"
            android:layout_width="match_parent"
            android:layout_height="56.5dp"
            android:textSize="16px"
            android:drawableLeft="@drawable/delete"
            android:paddingLeft="10px"
            android:id="@+id/btDelete"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="0.0dp" />


    </LinearLayout>
    <Button
        android:background="@drawable/nicelookingbutton"
        android:text="Izhod - F9"
        android:layout_width="match_parent"
        android:layout_height="56.5dp"
       android:textSize="16px"
        android:drawableLeft="@drawable/logout"
        android:paddingLeft="10px"
        android:id="@+id/btClose"
        android:layout_marginTop="0.0dp" />

</LinearLayout>