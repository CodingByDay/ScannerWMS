<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="198.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/deviceURL" />
    <ImageView
        android:src="@drawable/barcode"
        android:layout_width="match_parent"
        android:layout_height="181.5dp"
        android:id="@+id/img" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px">

        <TextView
            android:layout_width="108.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="5px"
            android:text="              Geslo:" />

        <EditText
            android:singleLine="true"
            android:id="@+id/password"
            android:layout_width="227.5dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:background="#ffe3d8d8"
            android:inputType="textPassword"
            android:breakStrategy="simple"
            android:focusedByDefault="true"
            android:layout_marginLeft="41.5dp"
            android:layout_marginRight="35.5dp" />

    </LinearLayout>



    <Button
        android:text="Prijava"
        android:layout_width="145.5dp"
        android:layout_height="82.0dp"
        android:id="@+id/btnRegistration"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_marginLeft="145.5dp"
        android:layout_marginBottom="0.0dp"
        android:layout_marginTop="71.0dp" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
   
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar1"
        android:visibility="invisible" />


    <TextView
        android:text="v0.01"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textView2"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:textSize="25sp"
        android:textColor="@android:color/background_light"
        android:gravity="center" />
</LinearLayout> 