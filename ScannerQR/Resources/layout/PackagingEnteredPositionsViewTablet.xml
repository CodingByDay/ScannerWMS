<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listData"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/holo_blue_light" 
        />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
      
        android:weightSum="4"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"

            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Štev. pakir."
            android:layout_marginRight="28.0dp"
            android:id="@+id/serial"
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="SSCC"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/sscc" />

          <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Kreiral"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/createdby" />
          <TextView
           android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Števil. pozicija"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/numberofpositions" />
        


      

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">
  <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Odprta pakiranja"
        android:id="@+id/lbInfo" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Št. pakiranja:"
            android:layout_marginRight="51.5dp" />

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"
             android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbPackNum" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSCC koda:"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView1"
            android:layout_marginRight="61.0dp" />

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"   
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbSSCC" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Št. pozicij:"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="67.0dp" />

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbItemCount" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Kreiral:"
            android:layout_marginRight="86.5dp" />

        <EditText
            android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbCreatedBy" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="112.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp">

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="uredi"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:drawableLeft="@drawable/fix"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/btUpdate"
                android:layout_marginBottom="0.0dp" />
        </LinearLayout>


 <LinearLayout
            
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="kreiraj"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/newitem"
                android:id="@+id/btCreate" />

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="izbriši"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/delete"
                android:paddingLeft="10dp"
                android:id="@+id/btDelete"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>

        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Izhod "
            android:layout_width="match_parent"
            android:layout_height="70.0dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10dp"
            android:id="@+id/btClose"
            android:layout_marginTop="0.0dp" />

    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>