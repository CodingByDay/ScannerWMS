<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />


    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
      
        android:layout_toRightOf="@id/app"
        android:id="@+id/listView1"
        />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
      
        android:weightSum="6"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/position" />


        <TextView
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/serial" />



        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/sscc" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">
    <TextView
        android:textStyle="bold"
        android:textSize="18dp"   
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Prevzem iz proizvodnje" />
    <LinearLayout
        android:textStyle="bold"
        android:textSize="18dp" 
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"  
            android:singleLine="true"
            android:layout_width="43.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="DN"
            android:layout_marginRight="72.0dp" />

        <EditText
            android:textStyle="bold"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbWorkOrder" />


    </LinearLayout>

    <LinearLayout
            android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
           android:textSize="18dp" 
            android:singleLine="true"
            android:layout_width="90.0dp"
            android:layout_height="wrap_content"
            android:text="Odprta kol."
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView1"
            android:layout_marginRight="23.0dp" />

        <EditText
            android:textStyle="bold"
            android:textSize="18dp"   
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbOpenQty" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"    
            android:singleLine="true"               
            android:layout_width="73.0dp"
            android:layout_height="wrap_content"
            android:text="Naročnik"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="40.0dp" />

        <EditText
            android:textStyle="bold"
            android:textSize="18dp"   
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:id="@+id/tbClient" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="109.0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident" />

        <EditText
            android:textStyle="bold"
            android:textSize="18dp"   
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbIdent" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"    
            android:layout_width="109.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Naziv" />

        <EditText
            android:textStyle="bold"
            android:textSize="18dp"    
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"
            android:paddingTop="5dp"
            android:id="@+id/tbName" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="128.0dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="11.0dp" />
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="Karton"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/card"
                android:id="@+id/btCard"
                android:layout_marginBottom="0.0dp" />

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="potrdi"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:drawableLeft="@drawable/confirmation"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/btConfirm"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>


 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="paletiranje"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/wholesale"
                android:id="@+id/btPalette" />

            <Button
                android:background="@drawable/nicelookingbutton"
                android:text="izhod"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="70.0dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/logout"
                android:paddingLeft="15dp"
                android:id="@+id/button2"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>

    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>