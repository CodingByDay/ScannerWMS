<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/app"
        android:layout_below="@id/text"
        />



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/app"
        android:id="@+id/listData"
        />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_toRightOf="@id/app"
    
    
        android:weightSum="3"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="28.0dp"
            android:id="@+id/ident"
            android:layout_width="match_parent"
            android:text="Ident" />

        <TextView
            android:text="Količina" 
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/name" />

        <TextView
            android:text="Lokacija"            
           android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
            android:id="@+id/quantity" />
       


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/app"
        tools:context=".LinearLayout"
        android:foregroundGravity="center">

      
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Ident"
            android:layout_marginRight="71.5dp" />

            <EditText
                android:textStyle="bold"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="35.0dp"
                android:paddingTop="5dp"
                android:id="@+id/tbIdent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="91.0dp"
                android:layout_height="wrap_content"
                android:text="SSCC "
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView1"
                android:layout_marginRight="33.0dp" />

            <EditText
                android:textStyle="bold"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="35.0dp"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:id="@+id/tbSSCC" />


            <Button
                android:text="..."
                android:layout_width="48.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btMorePallets" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="90.0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Serijska "
                android:layout_marginRight="31.5dp" />

            <EditText
                android:textStyle="bold"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="34.0dp"
                android:paddingTop="5dp"
                android:id="@+id/tbSerialNum" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="93.0dp"
                android:layout_height="wrap_content"
                android:text="Izdana"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="26.0dp" />

            <EditText
                android:textStyle="bold"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="35.0dp"
                android:layout_weight="0.50"
                android:paddingTop="5dp"
                android:id="@+id/tbLocation" />
            
                <Spinner
                android:layout_width="71.0dp"
                android:layout_height="match_parent"
                android:id="@+id/spLocation" />

    </LinearLayout>
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Količina"
            android:layout_marginRight="50.0dp"
            android:id="@+id/lbQty" />

            <EditText
                android:textStyle="bold"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="150.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="27.0dp"
                android:paddingTop="5dp"
                android:id="@+id/tbPacking" />

            <Button
                android:text="-(F1)"
                android:layout_width="57.0dp"
                android:layout_height="52.0dp"
                android:id="@+id/button1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Št. enot"
            android:layout_marginRight="49.5dp"
            android:id="@+id/lbUnits" />


            <EditText
                android:textStyle="bold"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="24.0dp"
                android:paddingTop="5dp"
                android:id="@+id/tbUnits" />


    </LinearLayout>

    
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
           android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Paleta"
            android:layout_marginRight="57.0dp"
            android:id="@+id/lbPalette" />

            <EditText
                android:textStyle="bold"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="30.0dp"
                android:paddingTop="5dp"
                android:id="@+id/tbPalette" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginRight="49.5dp"
        android:id="@+id/space" />
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="5dp">

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Serijska"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/newitem"
                android:id="@+id/btSaveOrUpdate"
                android:layout_marginBottom="0.0dp" />

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Kreiraj"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:drawableLeft="@drawable/newitem"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/button4"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>


 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="5dp">

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Zaključi"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/shipped"
                android:id="@+id/button6" />

            <Button
                android:layout_weight="1"
                android:background="@drawable/nicelookingbutton"
                android:text="Pregled"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/focus"
                android:paddingLeft="10dp"
                android:id="@+id/button5"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />


    </LinearLayout>
        <Button
            android:background="@drawable/nicelookingbutton"
            android:text="Izhod "
            android:layout_width="match_parent"
            android:layout_height="60.0dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/logout"
            android:paddingLeft="10dp"
            android:id="@+id/button7"
            android:layout_marginTop="0.0dp" />
    
        <com.jsibbold.zoomage.ZoomageView

            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imagePNG" />
    

    </LinearLayout>









</androidx.percentlayout.widget.PercentRelativeLayout>